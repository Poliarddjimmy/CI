<div class="container">
  <p id="notice"><%= notice %></p>
  <h1 class="d-flex justify-content-between">
    Contacts
    <small>
      <%= link_to 'Log failed contacts', failed_contacts_path, class: 'btn btn-default' %>
    </small>
  </h1>

  <table class="table table-striped">
    <thead>
      <tr>
        <th>Name</th>
        <th>Dob</th>
        <th>Phone</th>
        <th>Address</th>
        <th>Credit card</th>
        <th>Franchise</th>
        <th>Email</th>
        <th colspan="3">Action</th>
      </tr>
    </thead>

    <tbody>
      <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.dob %></td>
        <td><%= contact.phone %></td>
        <td><%= contact.address %></td>
        <td><span class="text-muted">xxxx xxxx xxxx</span> <%= contact.last_4 %></td>
        <td><%= contact.franchise %></td>
        <td><%= contact.email %></td>
        <td><%= link_to 'Show', contact, class: "btn btn-mini btn-info" %></td>
        <td>
          <%= form_for contact, url: contact_path(contact), method: :delete, remote: true do |f| %>
          <%= f.submit 'Destroy', class: 'btn btn-mini btn-danger w-100 ' %>
          <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @contacts%>
</div>